									, vec4(0, -1, 0, 0)
									, vec4(0, 0, 1, 0)
									, vec4(0, 0, 0, 1)); // [0, 1]^2 -> x : [0, 1], y : [0, -1]
	const mat4 translatePreRotate = mat4(vec4(1, 0, 0, 0)
							           , vec4(0, 1, 0, 0)
							           , vec4(0, 0, 1, 0)
							           , vec4(-0.5, 0.5, 0, 1)); // Each vec4 represent a column. Shift x by -0.5, y by 0.5 (image grid to the center of the XY basis), and z by 1 (out of the screen)
