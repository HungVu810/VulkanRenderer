						   , vec4(viewPyramid.up, 0)
						   , vec4(viewPyramid.forward, 0)
						   , vec4(0, 0, 0, 1));
	// Translate the image grid so that the image grid is centered with respect to the view pyramid
	vec3 imageGridBaseLocation = viewPyramid.location + viewPyramid.height * viewPyramid.forward;
